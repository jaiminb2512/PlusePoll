model Poll {
  id          Int          @id @default(autoincrement())
  question    String
  isPublished Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  author   User      @relation(fields: [authorId], references: [id])
  authorId Int

  options  PollOption[]
  votes    Vote[]
}
