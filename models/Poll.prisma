model Poll {
  id          String       @id @default(cuid())
  question    String
  isPublished Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  author   User        @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  options  PollOption[]
  votes    Vote[]

  @@map("polls")
}
